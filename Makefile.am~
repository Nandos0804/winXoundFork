## Process this file with automake to produce Makefile.in
## Created by Anjuta

SUBDIRS = ./scintilla/gtk ./src

all: standalone

# DOCUMENTS DIR
winxound_gtkmmdocdir = ${prefix}/doc/winxound_gtkmm
winxound_gtkmmdoc_DATA = \
	README\
	COPYING\
	AUTHORS\
	ChangeLog\
	INSTALL\
	NEWS

# APPLICATIONS DIR
#Applicationsdir = /usr/share/applications
Applicationsdir = $(datadir)/applications
Applications_DATA = winxound.desktop


EXTRA_DIST = $(winxound_gtkmmdoc_DATA) $(Applications_DATA)


# Make standalone
standalone:
	-cp ./src/winxound ./bin/winxound

# Remove doc directory on uninstall
uninstall-local:
	-rm -r $(winxound_gtkmmdocdir)
